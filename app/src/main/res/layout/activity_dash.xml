<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashPageActivity">


    <!-- Title Bar (Toolbar) -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:title="Home"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="#ffffff"
            android:background="#43C3BB"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:paddingEnd="16dp">

            <!-- Add an ImageView for the circular image -->
            <ImageView
                android:id="@+id/circular_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circular_background"/>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/navigation_top"/>

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_background"
            android:drawableRight="@drawable/ic_search_icon"
            android:elevation="8dp"
            android:hint="Search doctors.."
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="#9F9E9E" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="142dp"
            android:layout_marginRight="12dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:text="Doctor Speciality"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"
            android:layout_marginTop="33dp"
            android:scrollbars="none">

            <!-- Add the content you want to scroll horizontally here -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/heart"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/lungs"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bone"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/lung"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/skin"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/teeth"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/hi"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ji"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/eye"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ear"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/nose"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cugh"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/soft"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/freez"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/leg"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/legs"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/hand"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Add more items as needed -->
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/upcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="280dp"
            android:text="Upcoming Appointment"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_below="@+id/upcoming">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:elevation="10dp"
                android:src="@drawable/new_homes" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/upcoming"
            android:layout_marginTop="170dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/new_homes"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/new_homes"
                android:scaleType="fitXY"
                android:layout_marginLeft="24dp"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/new_homes"
                android:scaleType="fitXY"
                android:layout_marginLeft="24dp"
                />

        </LinearLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/navigation_menu"
            android:layout_alignParentBottom="true"
            android:background="#F1FFFC"
            app:elevation="2dp"
        />




    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>
