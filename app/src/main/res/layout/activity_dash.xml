                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <Button
                    android:id="@+id/ear"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <Button
                    android:id="@+id/nose"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <Button
                    android:id="@+id/cugh"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <Button
                    android:id="@+id/soft"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <Button
                    android:id="@+id/freez"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <Button
                    android:id="@+id/leg"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <Button
                    android:id="@+id/legs"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <Button
                    android:id="@+id/hand"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="Get Started"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/scroll_activity"
                    android:elevation="8dp"/>

                <!-- Add more items as needed -->
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/upcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Appointment"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/new_homes"
            android:layout_below="@+id/upcoming"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:elevation="10dp"/>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:src="@drawable/bottom_nav"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:elevation="10dp"
            />


            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home_icon"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="7dp"
                android:elevation="10dp"
                 />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_appointment_icon"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="91dp"
                android:layout_marginBottom="7dp"
                android:elevation="10dp"
                />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="164dp"
            android:layout_marginBottom="7dp"
            android:elevation="10dp"
            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_alarm_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="239dp"
            android:layout_marginBottom="7dp"
            android:elevation="10dp"
            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_person_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="309dp"
            android:layout_marginBottom="7dp"
            android:elevation="10dp"
            />



    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
