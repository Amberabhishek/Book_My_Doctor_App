<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_red_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/search"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:drawableRight="@drawable/ic_search_icon"
        android:hint="Search.."
        android:inputType="textPersonName"
        android:maxLength="18" />


    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_below="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:flipInterval="3000"
        android:autoStart="true"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="122dp"
            app:cardCornerRadius="5dp"
            android:elevation="12dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/grid_color"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="122dp"
            app:cardCornerRadius="5dp"
            android:elevation="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/grid_color"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="122dp"
            app:cardCornerRadius="5dp"
            android:elevation="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/grid_color"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="122dp"
            app:cardCornerRadius="5dp"
            android:elevation="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/grid_color"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="122dp"
            app:cardCornerRadius="5dp"
            android:elevation="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/grid_color"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>


    </ViewFlipper>



    <TextView
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_below="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Book Lab Test"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>


        <LinearLayout
        android:id="@+id/card_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:orientation="horizontal"
        android:layout_margin="8dp">


        <!-- CardView 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- CardView content for Test 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cancer"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- CardView content for Test 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dibaties"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- CardView content for Test 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fiver"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
        android:id="@+id/second_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_first"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- CardView content for Test 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kidney"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- CardView content for Test 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/liver"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- CardView content for Test 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/privat"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_card"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/covid"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Covid 19"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/vitamin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vitamin"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/blood_test"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Tests"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/urine"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Urine Tests"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/heart"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/joint"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Joint"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/infections"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Infections"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/allergy"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Allergy"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/anemia"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anemia"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/hormone"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hormone"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/hepatitis"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="16dp"
                    android:background="#FFEB3B">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hepatitie"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

