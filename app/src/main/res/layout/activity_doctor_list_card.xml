<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:hdodenhof="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dr_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/ic_person_icon" />

        <Button
            android:id="@+id/booking_btn"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="Book"
            android:backgroundTint="@color/green"
            android:layout_below="@+id/dr_image"
            android:layout_marginLeft="15dp"
            android:onClick="goAppointmentbooking"/>


        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/dr_image"
            android:text="Doctor name"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_marginRight="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dr_speciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor_name"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/dr_image"
            android:layout_marginRight="12dp"
            android:drawablePadding="2dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Dpoctor Speciality" />

        <TextView
            android:id="@+id/dr_about"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/dr_speciality"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/dr_image"
            android:drawablePadding="2dp"
            android:text="Doctor about" />

        <TextView
            android:id="@+id/dr_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dr_about"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/dr_image"
            android:layout_marginRight="12dp"
            android:drawablePadding="2dp"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:textColor="#FF2414"
            android:text="Doctor City"
            android:drawableRight="@drawable/ic_location_icon"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
