<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recovery_password">



    <TextView
        android:id="@+id/new_password"
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:text="Enter your new and confirm password to reset yout password."
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="40dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/re_password"
        android:layout_below="@id/new_password"
        android:background="#30ffffff"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_lock_pass"
        android:drawablePadding="20dp"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/re_password"
        android:background="#30ffffff"
        android:hint="Confirm Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_lock_pass"
        android:drawablePadding="20dp"
        android:inputType="text"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_otp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="380dp"
        android:backgroundTint="@color/white"
        android:textColor="#43C3BB"
        android:text="Reset password"
        android:textSize="20dp"
        />



</RelativeLayout>