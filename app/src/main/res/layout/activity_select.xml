<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/gole"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="2">



    <ImageView
        android:id="@+id/doctor_View"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginLeft="170dp"
        android:src="@drawable/design_doctor"
        />

    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/gole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/doctor_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        app:cardElevation="8dp"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/doctor_select"/>

            <TextView
                android:text="Doctor"
                android:layout_marginLeft="25dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/patient_butn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/patient_select"/>

            <TextView
                android:text="Patient"
                android:layout_marginLeft="25dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>