<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_doctor_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/special"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:drawableRight="@drawable/ic_right_arrow"
                android:text="Doctor Speciality"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/special"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/as"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/aaa"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/aba"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/abb"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bab"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card6"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/aaaa"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/first_card7"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="12dp">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="75dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/aamore"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Add more cards as needed -->

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/upcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="145dp"
                android:text="Upcoming Appointment"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />



            <LinearLayout
                android:id="@+id/card_images"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_below="@+id/upcoming">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="12dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <LinearLayout
                        android:id="@+id/card_image"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/grid_color">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/girl" />

                        <TextView
                            android:id="@+id/doctor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Neena Singh"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="12dp"
                            />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:text="Oct 10, 2023"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:padding="2dp"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/ic_appointment_icon"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="150dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:text="05:00 PM"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:padding="2dp"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/ic_clock_icon"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>





            <LinearLayout
                android:id="@+id/colm"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@+id/card_images"
                android:orientation="horizontal"
                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/imageCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp"
                    android:layout_margin="12dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/blood"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Bank"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/videoCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/injection"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lab Tests"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/audioCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/medic"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medicine"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_below="@+id/colm"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:flipInterval="3000"
                android:autoStart="true"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/img_1"
                        android:orientation="horizontal" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/img_2"
                        android:orientation="horizontal" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/img_5"
                        android:orientation="horizontal" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/img_3"
                        android:orientation="horizontal" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginVertical="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/img_4"
                        android:orientation="horizontal" />
                </androidx.cardview.widget.CardView>


            </ViewFlipper>


            <RelativeLayout
                android:id="@+id/abot"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D4F6F3"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="book my doctor"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="25dp"
                        android:textColor="#07675E"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our vision is to help mankind live
healthier, longer lives by making quality healthcare accessible, affordable and convenient."
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#06756B"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Made by Amber_Abhishek @Delhi"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="22dp"
                        android:textColor="#03635A"
                        />



                </LinearLayout>

            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>



</FrameLayout>

