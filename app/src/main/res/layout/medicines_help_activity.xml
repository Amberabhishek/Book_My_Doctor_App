<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/img_26"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Hi,\nWe are here to help you."
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginLeft="35dp"
        android:textSize="26sp"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book My Doctor"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text"
        />


    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get instant support 24/7."
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/text1"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/help_animation"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_below="@+id/text2"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/help_anim"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/help_animation"
        android:orientation="vertical"
        android:gravity="bottom">

        <androidx.cardview.widget.CardView
            android:id="@+id/call_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="30dp"
            android:elevation="8dp"
            android:backgroundTint="#0372A5"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Us"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/chat_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom"
            android:elevation="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:backgroundTint="#0372A5"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat With Us"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>






