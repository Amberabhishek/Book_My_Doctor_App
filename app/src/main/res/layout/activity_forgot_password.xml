<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/forgot_pass">


    <TextView
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:text="No Worries, Enter your phone number below to receive an OTP to reset your password."
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"/>



    <TextView
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Phone Number"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="45dp"/>


    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:hint="Enter your phone number"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="35dp"
        android:padding="20dp"
        android:layout_marginTop="245dp"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_phone_number"
        android:drawablePadding="20dp"
        android:maxLength="10"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_otp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="@color/white"
        android:textColor="#43C3BB"
        android:text="Get OTP"
        android:textSize="20dp"
        />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="310dp"
        android:src="@drawable/boy"
        android:layout_marginTop="430dp"
        android:layout_marginRight="100dp"/>


</RelativeLayout>