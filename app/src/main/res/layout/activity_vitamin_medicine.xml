<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllActivity.MedicinesList.VitaminMedicineActivity">

    <!-- ImageView for uploading an image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewUpload"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_person_icon"
        android:clickable="true"
        android:background="#1D000000"
        />



    <!-- EditText for user input -->
    <EditText
        android:id="@+id/editTextUserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Medicine Name"
        android:inputType="text"
        android:layout_below="@id/imageViewUpload"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


    <!-- EditText for user input -->
    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Medicine Price"
        android:inputType="number"
        android:layout_below="@id/editTextUserInput"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <!-- EditText for user input -->
    <EditText
        android:id="@+id/editTextInput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Company Name"
        android:inputType="text"
        android:layout_below="@id/editTextInput"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/expiry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Select Expiry Date"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextInput1"/>


    <!-- NumberPicker for selecting a year -->
    <NumberPicker
        android:id="@+id/numberPickerYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expiry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"/>



    <!-- Button to open the DatePicker dialog -->
    <Button
        android:id="@+id/upload"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberPickerYear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Upload"/>



</RelativeLayout>